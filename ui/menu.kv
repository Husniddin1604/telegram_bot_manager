# Сетка карточек 2x2 — СТАБИЛЬНАЯ
GridLayout:
    cols: 2
    spacing: dp(20)
    padding: dp(24), dp(100), dp(24), dp(40)
    size_hint_x: 0.9
    size_hint_y: None
    height: dp(420)
    pos_hint: {"center_x": 0.5, "top": 0.85}

    # ===== Карточка 1 =====
    Button:
        size_hint_y: None
        height: dp(190)
        background_color: 1, 1, 1, 1
        background_normal: ""
        on_release: root.show_publications()
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 0.9
            RoundedRectangle:
                radius: [20]
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: "vertical"
            padding: dp(20)
            spacing: dp(12)

            Widget:

            Image:
                source: "assets/publications_icon.png"
                size_hint: None, None
                size: dp(72), dp(72)
                allow_stretch: True
                keep_ratio: True

            Label:
                text: "Список\nпубликаций"
                font_size: "16sp"
                color: 0.25, 0.25, 0.6, 1
                halign: "center"
                text_size: self.width, None

            Widget:

    # ===== Карточка 2 =====
    Button:
        size_hint_y: None
        height: dp(190)
        background_color: 1, 1, 1, 1
        background_normal: ""
        on_release: root.create_publication()
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 0.9
            RoundedRectangle:
                radius: [20]
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: "vertical"
            padding: dp(20)
            spacing: dp(12)

            Widget:

            Image:
                source: "assets/add_icon.png"
                size_hint: None, None
                size: dp(72), dp(72)

            Label:
                text: "Создать\nпубликацию"
                font_size: "16sp"
                halign: "center"
                text_size: self.width, None

            Widget:

    # ===== Карточка 3 =====
    Button:
        size_hint_y: None
        height: dp(190)
        background_color: 1, 1, 1, 1
        background_normal: ""
        on_release: root.show_templates()
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 0.9
            RoundedRectangle:
                radius: [20]
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: "vertical"
            padding: dp(20)
            spacing: dp(12)

            Widget:

            Image:
                source: "assets/templates_icon.png"
                size_hint: None, None
                size: dp(72), dp(72)

            Label:
                text: "Шаблоны"
                font_size: "16sp"
                halign: "center"

            Widget:

    # ===== Карточка 4 =====
    Button:
        size_hint_y: None
        height: dp(190)
        background_color: 1, 1, 1, 1
        background_normal: ""
        on_release: root.show_settings()
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 0.9
            RoundedRectangle:
                radius: [20]
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: "vertical"
            padding: dp(20)
            spacing: dp(12)

            Widget:

            Image:
                source: "assets/settings_icon.png"
                size_hint: None, None
                size: dp(72), dp(72)

            Label:
                text: "Настройки"
                font_size: "16sp"
                halign: "center"
