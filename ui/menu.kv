<MenuScreen>:
    name: "menu"

    BoxLayout:
        orientation: "vertical"
        padding: 30
        spacing: 25
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Главное меню"
            font_size: 24
            bold: True
            size_hint_y: 0.15
            color: 0.1, 0.1, 0.1, 1

        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint_y: 0.25
            canvas.before:
                Color:
                    rgba: 0.97, 0.97, 0.97, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            padding: 15

            Label:
                id: bot_label
                text: "Бот не подключен"
                font_size: 16
                bold: True
                color: 0.1, 0.1, 0.1, 1

            Label:
                id: bot_info
                text: "Подключите бота для начала работы"
                font_size: 14
                text_size: self.width, None
                color: 0.5, 0.5, 0.5, 1

        BoxLayout:
            orientation: "vertical"
            spacing: 12
            size_hint_y: 0.5

            Button:
                text: "Отправить сообщение"
                font_size: 16
                size_hint_y: None
                height: 50
                background_color: 0.2, 0.7, 0.3, 1
                background_normal: ""
                on_release: root.go_send()

            Button:
                text: "Панель управления"
                font_size: 16
                size_hint_y: None
                height: 50
                background_color: 0.8, 0.5, 0.2, 1
                background_normal: ""
                on_release: root.go_control_panel()

            Button:
                text: "Управление ботами"
                font_size: 16
                size_hint_y: None
                height: 50
                background_color: 0.2, 0.6, 0.8, 1
                background_normal: ""
                on_release: root.go_bots()

            Button:
                text: "Подключить бота"
                font_size: 16
                size_hint_y: None
                height: 50
                background_color: 0.7, 0.3, 0.5, 1
                background_normal: ""
                on_release: root.go_login()